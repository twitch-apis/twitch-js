{
  "name": "twitch-js",
  "version": "2.0.0-beta.1",
  "description": "Javascript library for the Twitch Messaging Interface.",
  "license": "MIT",
  "author": "Marc Andrews",
  "keywords": [
    "bot",
    "broadcast",
    "interface",
    "message",
    "messaging",
    "robot",
    "stream",
    "tmi",
    "twitch.tv",
    "twitch",
    "websocket",
    "ws"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/twitch-apis/twitch-js.git"
  },
  "bugs": {
    "url": "https://github.com/twitch-apis/twitch-js/issues"
  },
  "engines": {
    "node": ">=8",
    "yarn": "^1.3.2"
  },
  "main": "lib/index.js",
  "files": [
    "dist",
    "examples",
    "lib",
    "shims",
    "src"
  ],
  "runkitExampleFilename": "examples/runkit.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "lint": "eslint \"{__mocks__,examples,shims,src}/**/*.js\"",
    "test": "jest",
    "pretest:coverage": "rimraf coverage",
    "test:coverage": "jest --runInBand --collectCoverage",
    "test:coverage:report": "npm run test:coverage && codecov",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"**/*.{js,md}\"",
    "prepublish": "npm run build",
    "prebuild": "npm run clean",
    "build:lib": "babel src --out-dir lib --source-maps --ignore __tests__",
    "build:dist:dev": "webpack",
    "build:dist:prod": "webpack --env.production",
    "build": "run-p build:**",
    "predocs": "rimraf docs",
    "docs:dev": "nodemon --exec npm run docs",
    "docs": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "better-queue": "^3.8.7",
    "better-queue-memory": "^1.0.2",
    "camelcase-keys": "^4.2.0",
    "date-fns": "^1.29.0",
    "eventemitter3": "^3.1.0",
    "form-data": "^2.3.2",
    "invariant": "^2.2.4",
    "irc-message": "^3.0.2",
    "lodash": "^4.17.4",
    "node-fetch": "^1.7.3",
    "qs": "^6.5.2",
    "validator": "^9.2.0",
    "whatwg-fetch": "^2.0.3",
    "ws": "^5.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "8.0.3",
    "babel-jest": "^22.0.6",
    "babel-loader": "7.1.2",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "codecov": "^3.0.2",
    "compression-webpack-plugin": "^1.1.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "^21.17.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^6.0.1",
    "lodash-webpack-plugin": "^0.11.4",
    "nodemon": "^1.17.5",
    "npm-run-all": "4.1.2",
    "prettier": "^1.10.2",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "2.5.2",
    "semver": "^5.5.0",
    "webpack": "^3.12.0"
  },
  "optionalDependencies": {
    "uws": "^10.148.1"
  },
  "browser": {
    "form-data": "./shims/form-data.js",
    "node-fetch": "./shims/node-fetch.js",
    "uws": "./shims/ws.js",
    "ws": "./shims/ws.js"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": 6,
                "browser": "Chrome 41"
              }
            }
          ],
          "stage-2"
        ]
      },
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ],
          "stage-2"
        ]
      }
    },
    "plugins": [
      "lodash"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:jest/recommended"
    ]
  },
  "eslintIgnore": [
    "dist",
    "lib",
    "node_modules"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "bracketSpacing": true,
    "useTabs": false,
    "semi": false,
    "parser": "babylon",
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
      {
        "files": [
          "examples/*",
          "shims/*",
          "webpack.config.js"
        ],
        "options": {
          "semi": true
        }
      }
    ]
  },
  "nodemonConfig": {
    "watch": [
      "examples",
      "shims",
      "src",
      "package.json"
    ],
    "delay": "500"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/__mocks__",
      "<rootDir>/dist",
      "<rootDir>/lib",
      "<rootDir>/node_modules",
      "<rootDir>/shims"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "./coverage/"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "brand": {
            "title": "TwitchJS",
            "description": "A community-centric, community-supported Twitch JavaScript SDK.",
            "repository": "https://github.com/twitch-apis/twitch-js/tree/next"
          }
        }
      },
      {
        "name": "esdoc-ecmascript-proposal-plugin",
        "option": {
          "all": true
        }
      }
    ]
  }
}
